<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-light navigation">
                    <a class="navbar-brand" href="{{ path('app') }}">
                        <img src="{{ asset('image/image-safer.jpg') }}" alt="Logo" style="width:200px;height:100px;">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto main-nav">
                            {# TODO: active menu #}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app') }}">Accueil</a>
                            </li>
                            <li class="nav-item dropdown dropdown-slide @@dashboard">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="{{ path('app_property_index') }}?type=Vente">
                                    Acheter
{#                                    <span><i class="bi bi-caret-down-fill"></i></span>#}
                                </a>
                            </li>
                            <li class="nav-item dropdown dropdown-slide @@pages">
                                <a class="nav-link dropdown-toggle" href="{{ path('app_property_index') }}?type=Location" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Louer
{#                                    <span><i class="fa fa-angle-down"></i></span>#}
                                </a>
                            </li>

                        </ul>
                        <ul class="navbar-nav ml-auto mt-10">
                            {% if is_granted('IS_AUTHENTICATED') %}
                                <li class="nav-item">
                                    <a class="nav-link login-button" href="{{ path('app_account') }}">Mon compte</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="nav-item">
                                        <a class="nav-link add-button" href="{{ path('admin_dashboard') }}">Admin</a>
                                    </li>
                                {% endif %}
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link login-button" href="{{ path('app_login') }}">Connexion</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link add-button" href="{{ path('app_register') }}">Inscription</a>
                                </li>
                                {% set favoritesCount = app.request.cookies.get('favorites') ? app.request.cookies.get('favorites')|split(',')|length : 0 %}
                                {% if favoritesCount > 0 %}
                                    {# show favory using cookies favorites #}
                                    {# if  #}
                                    <li class="nav-item mx-3">
                                        <a class="nav-link add-button" href="{{ path('app_account_favory') }}">{{ favoritesCount }} favory</a>
                                    </li>
                                {% endif %}
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>