==========================================-->

<section class=" section">
    <!-- Container Start -->
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section title -->
                <div class="section-title">
                    <h2>Catégorie des biens disponibles</h2>
                    <p>Découvrez la diversité de nos biens à travers les catégories auxquels ils appartiennent. </p>
                </div>
                <div class="row justify-content-around">
                    <!-- Category list -->
                    {% for category in categories %}
                    <div class="col-lg-2">
                        <div class="category-block">
                            <div class="header">
{#                                <i class="fa fa-laptop icon-bg-1"></i>#}
                                <h4>{{ category.name }}</h4>
                            </div>
                            <ul class="category-list">
                                <li><a href="{{ path('app_property_index') }}?category={{ category.id }}">Disponibles <span>{{ category.properties|length }}</span></a></li>
                                <li><a href="{{ path('app_property_index') }}?category={{ category.id }}&type=Location">Locations <span>{{ category.properties|filter(p => p.type == 'Location')|length }}</span></a></li>
                                <li><a href="{{ path('app_property_index') }}?category={{ category.id }}&type=Vente">Vente <span>{{ category.properties|filter(p => p.type == 'Vente')|length }}</span></a></li>
                            </ul>
                        </div>
                    </div> <!-- /Category List -->

                {% endfor %}
            </div>
        </div>
    </div>
    </div>
    <!-- Container End -->
</section>


