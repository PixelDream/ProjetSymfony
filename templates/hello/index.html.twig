   ================================-->


<section class="hero-area bg-1 text-center overly">
    <!-- Container Start -->
    <div class="container position-relative">
        <div class="row">
            <div class="col-md-12">
                <!-- Header Content -->
                <div class="content-block">
                    <h1>Devenez propriétaire ou locataire aujourd'hui </h1>
                    <p>Appartenez aux milliers de personnes qui achetents et louent <br>tous les jours à travers la
                        France</p>
                    <div class="short-popular-category-list text-center">
                        <h2>Catégories les plus populaires</h2>
                        <ul class="list-inline">
                            {%  for category in categories %}
                            <li class="list-inline-item">
                                <a href="{{ path('app_property_index') }}?category={{ category.id }}">{{ category.name }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <!-- Advance Search -->
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Advance Search -->
                            {% form_theme form with ['foundation_5_layout.html.twig'] only %}
                            {{ form_start(form) }}
                            <div class="advance-search nice-select-white">
                                <div class="row align-items-center">
                                    <div class="form-group col-xl-4 col-lg-4 col-md-6">
                                        {{ form_row(form.search) }}
                                    </div>

                                    <div class="form-group col-lg-2 col-md-6">
                                        {{ form_row(form.type) }}
                                    </div>

                                    <div class="form-group col-lg-2 col-md-6">
                                        {{ form_row(form.category) }}
                                    </div>

                                    <div class="form-group col-lg-2 col-md-6" data-controller="city" data-city-searchable-value="true" data-city-placeholder-value="Localisation">
                                        {{ form_row(form.city) }}
                                    </div>

                                    <div class="form-group col-xl-1 col-lg-2 col-md-6">
                                        <button type="submit" class="btn btn-primary active">Rechercher</button>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form, {render_rest: false}) }}
                        </div>
                    </div>
                </div>

