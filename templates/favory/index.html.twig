                                                                <th>Action</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                            {% for favory in user.favorites %}
                                                                <tr>
                                                                    <td>{{ favory.reference }}</td>
                                                                    <td>{{ favory.title }}</td>
                                                                    <td>{{ favory.type }}</td>
                                                                    <td>{{ favory.category.name }}</td>
                                                                    <td>{{ favory.location }}</td>
                                                                    <td>
                                                                        <a href="{{ ea_url().setAction('detail').setEntityId(favory.id).setController('App\\Controller\\Admin\\PropertyCrudController') }}" class="btn btn-primary btn-sm">Consulter</a>
                                                                    </td>
                                                                </tr>
                                                            {% endfor %}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
