{% extends 'base.html.twig' %}

{% block title %}Alerte de recherche{% endblock %}


{% block body %}

    <div class="container my-5">
        <h1>Cr√©er une alerte</h1>

        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.city) }}
                        </div>

                        <div class="form-group col-md-6">
                            {{ form_row(form.zipCode) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.category) }}
                        </div>

                        <div class="form-group col-md-6">
                            {{ form_row(form.type) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.surfaceMin) }}
                        </div>

                        <div class="form-group col-md-6">
                            {{ form_row(form.surfaceMax) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            {{ form_row(form.priceMin) }}
                        </div>

                        <div class="form-group col-md-6">
                            {{ form_row(form.priceMax) }}
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary float-end">Enregistrer la recherche</button>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}


