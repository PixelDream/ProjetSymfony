<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Compte > {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>

        {% include "_toasts.html.twig" %}

        <turbo-frame id="header_frame">
            {% include "_header.html.twig" %}

            <section class="dashboard section">
                <!-- Container Start -->
                <div class="container">
                    <!-- Row Start -->
                    <div class="row">
                        {% if app.user %}
                            <div class="col-lg-4">
                                {% include 'account/_sidebar.html.twig' %}
                            </div>
                        {% endif %}
                        <div class="col-lg-{{ app.user ? '8' : '12' }}">
                            <!-- Recently Favorited -->
                            {% block body %}{% endblock %}
                        </div>
                    </div>
                    <!-- Row End -->
                </div>
                <!-- Container End -->
            </section>
        </turbo-frame>

        {% include '_footer.html.twig' %}

    </body>
</html>
