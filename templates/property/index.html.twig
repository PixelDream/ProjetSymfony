{#                                            </li>#}
{#                                        {% endif %}#}
{#                                    {% endfor %}#}
                                </ul>
                            </div>
                        {% endif %}

                        {% if categories and app.request.query.get('category') is empty %}
                            <div class="widget category-list">
                                <h4 class="widget-header">Toutes les catégories</h4>
                                <ul class="category-list">
                                    {% for key, category in categories %}
                                        <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all|merge({'category': key }))) }}">{{ category.name }} <span>{{ category.properties|length }}</span></a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

                        {% if types and app.request.query.get('type') is empty %}
                            <div class="widget category-list">
                                <h4 class="widget-header">Type</h4>
                                <ul class="category-list">
                                    {% for type in types %}
                                        <li><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all|merge({'type': type.type }))) }}">{{ type.type }} <span>{{ type.count }}</span></a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        {% endif %}

{#                        {% if properties|length > 1 %}#}
