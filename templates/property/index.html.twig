{% extends 'base.html.twig' %}

{% block title %}Property index{% endblock %}

{% block body %}

    {% form_theme form with ['foundation_5_layout.html.twig'] only %}
    {{ form_start(form) }}
    <section class="page-search">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Advance Search -->
                    <div class="advance-search nice-select-white">
                        <div class="row align-items-center">
                            <div class="form-group col-xl-3 col-lg-3 col-md-6">
                                {{ form_row(form.search) }}
                            </div>

                            <div class="form-group col-lg-2 col-md-6">
                                {{ form_row(form.type) }}
                            </div>

                            <div class="form-group col-lg-2 col-md-6">
                                {{ form_row(form.category) }}
                            </div>

                            <div class="form-group col-lg-2 col-md-6" data-controller="city" data-city-searchable-value="true" data-city-placeholder-value="Localisation">
                                {{ form_row(form.city) }}
                            </div>

                            <div class="form-group col-xl-1 col-lg-2 col-md-6">
                                <button type="submit" class="btn btn-primary active">Rechercher</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="search-result bg-gray">
                        {% if research.search is not empty %}
                            <h2>Résultats pour "{{ research.search }}"</h2>
                        {% endif %}
                        {% if properties.getTotalItemCount == 0 %}
                            <p>Aucun résultat</p>
                        {% else %}
                            {% if properties.getTotalItemCount == 1 %}
                                <p>1 bien trouvé</p>
                            {% else %}
                                <p>{{ properties.getTotalItemCount }} biens trouvés</p>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="category-sidebar">
                        {% set filterCount = app.request.query.all|filter((v) => v != "")|length %}
                        {% if filterCount > 0 %}
                            <div class="widget category-list">
                                <ul class="category-list">
                                    <li>
                                        <a class="text-decoration-none" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}"><i class="bi bi-trash"></i> Supprimer tous les filtres ({{ filterCount }})</a>
                                    </li>
