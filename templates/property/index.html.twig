                                <strong>Trier par </strong>
                                <select class="form-select d-inline-block" style="width: 250px;" onChange="window.location=this.value;">
                                    {{ knp_pagination_sortable(properties, 'Titre A-Z', 'p.title', {}, {'direction': 'asc'}) }}
